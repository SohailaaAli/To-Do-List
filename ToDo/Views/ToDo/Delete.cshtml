@model ToDo

@{
    ViewBag.Title = "Delete Task";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">
                <i class="bi bi-exclamation-triangle-fill"></i> Confirm Delete
            </h4>
        </div>
        <div class="card-body">
            <p class="text-muted">Are you sure you want to delete this task? This action cannot be undone.</p>

            <dl class="row">
                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Title)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Details)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Details)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Date)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Date)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.IsDone)</dt>
                <dd class="col-sm-9">
                    @if (Model.IsDone)
                    {
                        <span class="badge bg-success">Completed</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">Pending</span>
                    }
                </dd>
            </dl>

            <form asp-action="Delete" class="mt-4">
                <div class="d-flex gap-2">
                    <input type="submit" value="Delete" class="btn btn-danger px-4" />
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
