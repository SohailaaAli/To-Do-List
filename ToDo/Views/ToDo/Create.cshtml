@model ToDo

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h4 class="mb-0">Create New Task</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold"></label>
                            <input asp-for="Title" class="form-control" placeholder="Enter task title" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Details" class="form-label fw-bold"></label>
                            <textarea asp-for="Details" class="form-control" rows="3" placeholder="Enter task details"></textarea>
                            <span asp-validation-for="Details" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Date" class="form-label fw-bold"></label>
                            <input asp-for="Date" type="date" class="form-control" />
                            <span asp-validation-for="Date" class="text-danger small"></span>
                        </div>

                        <div class="form-check mb-4">
                            <input asp-for="IsDone" class="form-check-input" />
                            <label asp-for="IsDone" class="form-check-label fw-bold"></label>
                            <span asp-validation-for="IsDone" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                            <button type="submit" class="btn btn-success px-4">Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
